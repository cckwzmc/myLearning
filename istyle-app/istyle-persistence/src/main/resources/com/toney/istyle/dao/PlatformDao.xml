<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.toney.istyle.dao.PlatformDao">
	<resultMap id="platformResult" type="platformModule">
		<id column="ID" property="id" />
		<result column="PLATFORM_CODE" property="platformCode" />
		<result column="PLATFORM_NAME" property="platformName" />
		<result column="CREATE_DATE" property="createDate" />
		<result column="OFFICE_WEBSITE" property="officeWebsite" />
		<result column="ENABLED" property="enabled" />
	</resultMap>
	<sql id="Base_Column_List">
		ID, PLATFORM_CODE, PLATFORM_NAME, CREATE_DATE, OFFICE_WEBSITE, ENABLED
	</sql>
	<select id="selectAll" resultType="java.util.List" resultMap="platformResult">
		select
		<include refid="Base_Column_List" />
		from T_PLATFORM
	</select>
	<select id="selectById" resultMap="platformResult" parameterType="java.lang.Integer">
		select
		<include refid="Base_Column_List" />
		from T_PLATFORM
		where ID = #{id}
	</select>
	<select id="selectByPfCode" resultMap="platformResult" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from T_PLATFORM
		where PLATFORM_CODE=#{platformCode}
	</select>
	<delete id="deleteById" parameterType="java.lang.Integer">
		delete from T_PLATFORM
		where ID = #{id}
	</delete>
	<delete id="deleteByPfCode" parameterType="java.lang.String">
		delete from T_PLATFORM where PLATFORM_CODE=#{platformCode}
	</delete>

	<insert id="insert" parameterType="com.toney.istyle.module.PlatformModule">
		insert into T_PLATFORM ( PLATFORM_CODE, PLATFORM_NAME,
		CREATE_DATE, OFFICE_WEBSITE, ENABLED
		)
		values (
		#{platformCode},
		#{platformName},
		#{createDate}, #{officeWebsite}, #{enabled}
		)
	</insert>
</mapper>