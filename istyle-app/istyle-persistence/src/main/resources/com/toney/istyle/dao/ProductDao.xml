<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.toney.istyle.dao.ProductDao">
	<resultMap id="productResult" type="productModule">
		<id column="ID" property="id" />
		<result column="PRODUCE_CODE" property="produceCode" />
		<result column="PLATFORM_CODE" property="platformCode" />
		<result column="PRODUCT_NAME" property="productName" />
		<result column="ONSALE" property="onsale" />
		<result column="UPLOAD_UID" property="uploadUid" />
		<result column="LAST_UPDATE" property="lastUpdate" />
		<result column="CREATE_DATE" property="createDate" />
		<result column="STATUS" property="status" />
		<result column="PRODUCT_URL" property="productUrl" />
		<result column="CAT_CODE" property="catCode" />
	</resultMap>
	<sql id="Base_Column_List">
		ID, PRODUCE_CODE, PLATFORM_CODE, PRODUCT_NAME, ONSALE, UPLOAD_UID, LAST_UPDATE, CREATE_DATE,
		STATUS,PRODUCT_URL,CAT_CODE
	</sql>
	<select id="countByCondiction" resultType="java.lang.Integer" parameterType="com.toney.istyle.module.ProductModule">
		select
		count(1)
		from T_PRODUCT
		<if test="module!=null">
			where 1=1
			<if test="module.productName!=null and module.productName!=null">
				PRODUCT_NAME like %#{module.productName}% </if>
			<if test="module.catCode!=null and module.catCode!=null">
				CAT_CODE=#{catCode}
			</if>
		</if>
	</select>
	
	<select id="selectPage" resultType="java.util.List" resultMap="productResult" parameterType="java.util.Map">
		select
		<include refid="Base_Column_List" />
		from T_PRODUCT
		where
		CAT_CODE like #{catCode} order by LAST_UPDATE desc limit #{startRecord},#{pageSize}
	</select>
	
	<select id="selectPageId" resultType="java.lang.Long" parameterType="java.util.Map">
		select
	    ID
		from T_PRODUCT
		where
		CAT_CODE like #{catCode} order by LAST_UPDATE desc limit #{startRecord},#{pageSize}
	</select>
	
	<select id="selectById" resultMap="productResult" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from T_PRODUCT
		where ID = #{id}
	</select>
	
	<select id="selectByIds" resultType="java.util.List" parameterType="java.util.List">
		select
		<include refid="Base_Column_List" />
		from T_PRODUCT
		where ID  in
		<foreach collection="ids" open="(" close=")" separator="," item="item">
			#{item}
		</foreach>
	</select>
	
	<delete id="deleteById" parameterType="java.lang.Long">
		delete from T_PRODUCT
		where ID = #{id}
	</delete>
	<delete id="deleteByIds" parameterType="java.util.List">
		delete from T_PRODUCT
		where ID in
		<foreach collection="idList" item="item" separator="," open="(" close=")">
			#{item}
		</foreach>
	</delete>
	<insert id="insert" parameterType="com.toney.istyle.module.ProductModule">
		insert into T_PRODUCT (PRODUCE_CODE, PLATFORM_CODE,
		PRODUCT_NAME, ONSALE,
		UPLOAD_UID,
		LAST_UPDATE, CREATE_DATE,
		STATUS,PRODUCT_URL,CAT_CODE
		)
		values
		(
		#{produceCode}, #{platformCode},
		#{productName},
		#{onsale},
		#{uploadUid},
		#{lastUpdate}, #{createDate},
		#{status},#{productUrl},#{catCode}
		)
	</insert>
	<update id="updateById" parameterType="com.toney.istyle.module.ProductModule">

	</update>
</mapper>