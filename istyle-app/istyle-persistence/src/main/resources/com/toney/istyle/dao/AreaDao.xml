<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.toney.istyle.dao.AreaDao">
	<resultMap id="areaModuleResult" type="areaModule">
		<result column="ID" property="id"/>
		<result column="PARENT_ID" property="parentId"/>
		<result column="NAME" property="name" />
		<result column="SEQUENCE" property="sequence"/>
	</resultMap>
	<sql id="Base_Column_List">
		ID, PARENT_ID, NAME, SEQUENCE
	</sql>
	<select id="selectAll" resultMap="areaModuleResult" resultType="java.util.List">
		select
		<include refid="Base_Column_List" />
		from T_AREA
	</select>
	<delete id="deleteById" parameterType="java.lang.Integer">
		delete from T_AREA
		where ID = #{id}
	</delete>
	<insert id="insert" parameterType="com.toney.istyle.module.AreaModule">
		insert into T_AREA (PARENT_ID, NAME, SEQUENCE)
		values ( #{parentId},#{name}, #{sequence})
	</insert>
</mapper>