<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.toney.sso.dao.UserLoginDao">
	<resultMap id="userLoginResult" type="userLoginModule">
		<id column="UID" property="uid" />
		<result column="LOGIN_DATE" property="loginDate" />
		<result column="LAST_LOGIN_DATE" property="lastLoginDate" />
		<result column="LOGIN_INFO" property="loginInfo" />
	</resultMap>
	<sql id="Base_Column_List">
		UID, LOGIN_DATE, LAST_LOGIN_DATE, LOGIN_INFO
	</sql>
	<select id="selectById" resultMap="userLoginResult" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from T_USER_LOGIN
		where UID = #{uid}
	</select>
	<delete id="deleteById" parameterType="java.lang.Long">
		delete from T_USER_LOGIN
		where UID = #{uid}
	</delete>
	<insert id="insert" parameterType="com.toney.sso.module.UserLoginModule">
		insert into T_USER_LOGIN (UID, LOGIN_DATE, LAST_LOGIN_DATE,
		LOGIN_INFO)
		values (#{uid},
		#{loginDate}, #{lastLoginDate},
		#{loginInfo})
	</insert>
	<update id="updateLoginDate" parameterType="java.util.Map">
		update T_USER_LOGIN set LOGIN_DATE=#{loginDate},LAST_LOGIN_DATE=#{lastLoginDate}
		where ID=#{uid}
	</update>
</mapper>