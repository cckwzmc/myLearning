<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.toney.sso.dao.UserDao">
	<resultMap id="userResult" type="userModule">
		<id column="ID" property="id"/>
		<result column="USER_NAME" property="userName"/>
		<result column="PASSWORD" property="password"/>
		<result column="NICK_NAME" property="nickName"/>
		<result column="MOBILE" property="mobile"/>
		<result column="CREATE_DATE" property="createDate"/>
		<result column="STATUS" property="status"/>
		<result column="REG_TYPE" property="regType"/>
	</resultMap>
	<sql id="Base_Column_List">
		ID, USER_NAME, PASSWORD, NICK_NAME, MOBILE, CREATE_DATE, STATUS,REG_TYPE
	</sql>
	<select id="selectById" resultMap="userResult" parameterType="java.lang.Long">
		select
		<include refid="Base_Column_List" />
		from T_USER
		where ID = #{id}
	</select>
	<select id="selectLikeUserName" resultMap="userResult" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from T_USER
		where USER_NAME  like  %#{userName}%
	</select>
	<select id="selectByUserName" resultMap="userResult" parameterType="java.lang.String">
		select
		<include refid="Base_Column_List" />
		from T_USER
		where USER_NAME  =  #{userName}
	</select>
	
	<select id="selectByRegType" resultMap="userResult" parameterType="java.lang.Short">
		select
		<include refid="Base_Column_List" />
		from T_USER
		where REG_TYPE  =  #{regType}
	</select>
	
	<delete id="deleteById" parameterType="java.lang.Long">
		delete from T_USER
		where ID = #{id}
	</delete>
	
	<insert id="insert" parameterType="com.toney.sso.module.UserModule">
		insert into T_USER ( USER_NAME, PASSWORD,
		NICK_NAME, MOBILE, CREATE_DATE,
		STATUS,REG_TYPE)
		values (
		#{userName}, #{password},
		#{nickName}, #{mobile}, #{createDate},
		#{status},#{regType})
	</insert>
</mapper>